<resources>

    <!-- App theme -->
    <style name="Theme.PlanDemic" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your Material colors/typography if you like -->
    </style>

    <!-- Splash theme (uses the Android 12+ SplashScreen API) -->
    <style name="Theme.PlanDemic.Splash" parent="Theme.SplashScreen">
        <!-- Background behind the icon -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>

        <!-- âœ… Use the launcher icon that already exists -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- The theme to apply after the splash disappears -->
        <item name="postSplashScreenTheme">@style/Theme.PlanDemic</item>
    </style>

</resources>
